<%- include("../partials/header") %>


<div class="container">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div class="inputSection">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" placeholder="name"
                    value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" placeholder="image url"
                    value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" placeholder="price per night"
                    value="<%= campground.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" placeholder="description"
                    value="<%= campground.description %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>

        <a style="margin-top: 20px;" class="btn btn-success btn-sm" href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>