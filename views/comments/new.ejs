<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;">Add New Comment to <%= campground.name %> </h1>
            <div style="max-width: 300px; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="comment[author]" placeholder="Author">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="commentArea" rows="4" name="comment[text]"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>

                <a style="margin-top: 20px;" class="btn btn-success btn-sm" href="/campgrounds/<%= campground._id %> ">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>